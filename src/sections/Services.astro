---
import Service from '../components/Service.astro';
import ServiceDetails from '../components/ServiceDetails.astro';
---

<section class="section section--services" data-id="services">
	<div class="container">
		<div class="section__subheader" data-aos="fade-up">
			<p>
				OUR SERVICES
			</p>
		</div><!-- /.section__subheader -->

		<header class="section__header" data-aos="fade-up">
			<h2>
				We Will Help You Grow Your Business with
			</h2>
		</header><!-- /.section__header -->

		<div class="services js-services">
			<div class="services__header">
				<div class="slider slider--services services__slider js-slider-services">
					<div class="swiper">
						<div class="swiper-wrapper">
							<div class="swiper-slide">
								<Service
									title="Web Design"
									current="true"
									data-service="web-design"
									icon="service-1.svg"
								/>
							</div><!-- /.swiper-slide -->

							<div class="swiper-slide">
								<Service
									title="Web Development"
									data-service="web-development"
									icon="service-2.svg"
								/>
							</div><!-- /.swiper-slide -->

							<div class="swiper-slide">
								<Service
									title="SEO Optimization"
									data-service="seo-optimization"
									icon="service-3.svg"
								/>
							</div><!-- /.swiper-slide -->

							<div class="swiper-slide">
								<Service
									title="Site Maintenance"
									data-service="site-maintenance"
									icon="service-4.svg"
								/>
							</div><!-- /.swiper-slide -->
						</div><!-- /.swiper-wrapper -->
					</div><!-- /.swiper -->
				</div><!-- /.slider js-slider -->
			</div><!-- /.services__header -->

			<div class="services__body">
				<div class="services__tab is-current js-service-tab" data-service="web-design">
					<div class="services-details">
						<div class="services__grid">
							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-1-1.svg"
									title="UI/UX design"
									text="We craft bespoke user interfaces and experiences tailored to your brand and audience, ensuring your website is both visually appealing and user-friendly."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-1-2.svg"
									title="Responsive Design"
									text="We design websites that look and function beautifully across all device types, from desktops to smartphones, ensuring a seamless user experience."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-1-3.svg"
									title="Branding & Logo Design"
									text="Elevating your brand identity with our custom logo and branding services, ensuring a memorable and recognizable presence in your market."
								/>
							</div><!-- /.services__grid-item -->
						</div><!-- /.services__grid -->
					</div><!-- /.services-details -->
				</div><!-- /.services__tab js-service-tab -->

				<div class="services__tab js-service-tab" data-service="web-development">
					<div class="services-details">
						<div class="services__grid">
							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-2-1.svg"
									title="WordPress Integration"
									text="Harness the power of WordPress with our integration services. Whether you're looking to transform an existing site or start afresh, we seamlessly incorporate the robust features of WordPress to cater to your needs."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-2-2.svg"
									title="E-commerce Solutions"
									text="Launching an online store? Our team offers seamless e-commerce solutions, making the buying process effortless for your customers and management simple for you."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-2-3.svg"
									title="Application Development"
									text="Dive into the dynamic world of single-page applications with our React expertise. We build fast, scalable, and interactive apps that engage users and drive results."
								/>
							</div><!-- /.services__grid-item -->
						</div><!-- /.services__grid -->
					</div><!-- /.services-details -->
				</div><!-- /.services__tab js-service-tab -->

				<div class="services__tab js-service-tab" data-service="seo-optimization">
					<div class="services-details">
						<div class="services__grid">
							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-3-1.svg"
									title="Keyword Research & Strategy"
									text="We pinpoint the optimal keywords for your niche and craft strategies to propel your website to the top of search engine results, maximizing your online visibility."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-3-2.svg"
									title="On-page SEO"
									text="Our team fine-tunes your website's content, structure, and meta-elements, ensuring search engines recognize and favor your content."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-3-3.svg"
									title="Technical SEO"
									text="We optimize the backend of your website, ensuring fast load times, mobile responsiveness, and clear indexing, laying a solid foundation for superior search engine visibility."
								/>
							</div><!-- /.services__grid-item -->
						</div><!-- /.services__grid -->
					</div><!-- /.services-details -->
				</div><!-- /.services__tab js-service-tab -->

				<div class="services__tab js-service-tab" data-service="site-maintenance">
					<div class="services-details">
						<div class="services__grid">
							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-4-1.svg"
									title="Technical Support"
									text="We offer dedicated support for any technical challenges you may face, ensuring your website runs smoothly and remains accessible to your audience."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-4-2.svg"
									title="Content Updates & Backups"
									text="We keep your content fresh, relevant, and safely backed up, ensuring your site remains up-to-date and can be swiftly restored in case of unforeseen issues."
								/>
							</div><!-- /.services__grid-item -->

							<div class="services__grid-item">
								<ServiceDetails
									icon="service-details-4-3.svg"
									title="Performance Optimization"
									text="Our regular checks and tweaks guarantee your website operates at peak performance, ensuring fast load times and smooth user experiences."
								/>
							</div><!-- /.services__grid-item -->
						</div><!-- /.services__grid -->
					</div><!-- /.services-details -->
				</div><!-- /.services__tab js-service-tab -->
			</div><!-- /.services__body -->
		</div><!-- /.services -->
	</div><!-- /.container -->
</section><!-- /.section -->
