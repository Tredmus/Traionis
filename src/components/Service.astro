---
const { title, index, slug, icon } = Astro.props;
---

<div class:list={[ 'service', { 'is-current': index === 0 }, 'js-service' ]} data-service={slug} data-aos="fade-up">
	<a href="#" class="service__link js-service-toggle">
		<div class="service__content">
			<div class="service__icon js-responsive-images">
				<!-- <Fragment set:html={icon} /> -->
			</div><!-- /.service__icon -->

			<div class="service__title">
				<h3 class="h6">
					{title}
				</h3>
			</div><!-- /.service__title -->

			<div class="service__view">
				<p>
					View all
				</p>
			</div><!-- /.service__view -->
		</div><!-- /.service__content -->
	</a>
</div><!-- /.service -->
